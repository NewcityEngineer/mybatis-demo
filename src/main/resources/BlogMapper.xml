<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.newcitysoft.study.mybatis.BlogMapper">

    <sql id="fields">
        id,
        title,
        content
    </sql>

    <select id="selectBlog" resultType="com.newcitysoft.study.mybatis.Blog">
      select
        <include refid="fields" />
      from
        blog
      where
        id = #{id}
    </select>

    <select id="getAll" resultType="com.newcitysoft.study.mybatis.Blog">
        select
          <include refid="fields"/>
        from
          blog
    </select>

    <insert id="insert" parameterType="com.newcitysoft.study.mybatis.Blog">
        insert into
            blog(title, content)
        values (
            #{title},
            #{content}
        )
    </insert>

    <update id="update" parameterType="com.newcitysoft.study.mybatis.Blog">
        update
          blog
          set title=#{title},content=#{content}
        where
          id=#{id}
    </update>

    <delete id="deleteById" parameterType="java.lang.Integer">
        delete from blog where id=#{id}
    </delete>
</mapper>